license=('GPL')
depends=('pass' 'qrencode' 'imagemagick')
optdepends=('feh: alternate image viewer')
makedepends=('git')
changelog='changelog.txt'
source=("${changelog}"
        "${pkgname}::git+${url}.git#tag=${pkgver}")
md5sums=('755603656962f000d56eb6d2bcb8f85a'
         'SKIP')

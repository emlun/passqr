pkgname=passqr
pkgver=1.1.0
pkgrel=1
pkgdesc="Generate 2D barcodes from password-store entries"
arch=('any')
url='https://github.com/emlun/passqr'
license=('GPL')
depends=('pass' 'qrencode')
optdepends=(
    'imagemagick: image viewer'
    'feh: recommended image viewer'
    'kdegraphics-gwenview: heavy (but compatible) image viewer'
    'xv: image viewer'
    )
makedepends=('git')
changelog='changelog.txt'
source=("${changelog}"
        "${pkgname}::git+${url}.git#tag=${pkgver}")
md5sums=('5a4a119a8d5f76455002b8919216bcee'
         'SKIP')
sha1sums=('f273776ca4bba1638699dda554eb1963ea4c7a9b'
          'SKIP')
sha256sums=('5d34db458455e4e649a8fc41bb3b8e6e9b11ea92831bdf81a5c018b0c985c648'
            'SKIP')
sha512sums=('aacad23c7af15699942f324287c53c76f08b36e92dc0c297762b26d54274f07be2f2262920138b97cea85851b16b8213b191e88a9def43e3deca97a4690e8e43'
            'SKIP')

package() {
    cd "${srcdir}/${pkgname}"
    make install DESTDIR="${pkgdir}"
}

            'SKIP')
sha512sums=('e67de582d31ed1fd0dd0e101cabd60f7992c3457b3f122460939652e11b81507c402eb5f56825b959ccad39f4d02dc85c4f58f17407886529c28789124a3e0a3'
            'SKIP')

package() {
    cd "${srcdir}/${pkgname}"
    make install DESTDIR="${pkgdir}"
